<h1>Users</h1>
<%= link_to 'Create user', new_user_path, {class: "btn btn-primary"} %>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Admin</th>
    <th>Show</th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.admin %></td>
      <td><%= link_to 'Show', user_path(user), class: "btn btn-primary" %></td>
      <td><%= link_to 'Update', edit_user_path(user) , class: "btn btn-primary" %></td>
      <td><%= link_to 'Delete', user_path(user), class: "btn btn-primary", method: :delete,
        data: { confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>