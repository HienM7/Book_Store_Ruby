<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <div style="width: 64px">
            <%= image_tag(book.image, style: 'width: 100%') %>
          </div>
        </td>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Add to cart', addtocart_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
